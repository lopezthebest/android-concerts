<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_llista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ariadna.engrescat.Llista">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:id="@+id/filtrebtn"
        android:onClick="filtra"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        app:backgroundTint="?attr/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:rippleColor="@android:color/white" />

    <Button
        android:text="Mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/MapaBtn"
        android:onClick="obremapa"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/MapaBtn" />
</RelativeLayout>
